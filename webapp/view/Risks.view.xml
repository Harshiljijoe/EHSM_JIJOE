<mvc:View controllerName="com.kaar.ehsm.controller.Risks"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <headerContent>
            <Button text="Logout" press="onLogout"/>
        </headerContent>
        <content>
            <Table items="{/risks}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Risks"/>
                        <ToolbarSpacer/>
                        <Button text="Refresh" press="onRefresh"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="ID"/></Column>
                    <Column><Text text="Description"/></Column>
                    <Column><Text text="Category"/></Column>
                    <Column><Text text="Severity"/></Column>
                    <Column><Text text="Likelihood"/></Column>
                    <Column><Text text="Mitigation"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskId}"/>
                            <Text text="{RiskDescription}"/>
                            <Text text="{RiskCategory}"/>
                            <Text text="{RiskSeverity}"/>
                            <Text text="{Likelihood}"/>
                            <Text text="{MitigationMeasures}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>